<?xml version="1.0" encoding="utf-8"?>
<Window  
  x:Class="Educational_Software.MainWindow"  
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
  xmlns:local="using:Educational_Software"  
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
  mc:Ignorable="d"  
  Title="Educational_Software">  

  <Grid>  
      <Grid.RowDefinitions>  
          <RowDefinition Height="Auto"/>  
          <RowDefinition Height="*"/>  
      </Grid.RowDefinitions>

        <StackPanel  Grid.Row="0" Orientation="Horizontal" Visibility="Visible" Spacing="15" Height="30"  x:Name="TitleBar" HorizontalAlignment="Stretch"  VerticalAlignment="Top" Margin="0, 0, 0, 7">
            <ImageIcon Height="18" Width="18" Margin="15, 0, 0, 0" VerticalAlignment="Center" HorizontalAlignment="Center" Source="Assets/light_house.png"/>
            <TextBlock VerticalAlignment="Center" Text="Educational Software" />
            <TextBlock Visibility="Visible" VerticalAlignment="Center" Text="PREVIEW" Foreground="Gray" />
        </StackPanel>

        <!-- Welcome Screen Grid  -->
      
        <Grid Grid.Row="1" Visibility="Visible" x:Name="welcome_screen">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="0" Grid.ColumnSpan="3" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 0, 0, 20">
                <Image Source="Assets/light_house.png" HorizontalAlignment="Center" Height="100" Width="100" Margin="0, 10, 0, 5"/>
                <TextBlock Text="The Exploration of Alexandroupolis" HorizontalAlignment="Center" FontSize="35" FontWeight="SemiBold" />
                <TextBlock Text="Ανακαλύψτε τον πολιτισμό και τις παραδόσεις" HorizontalAlignment="Center" FontSize="22" Margin="0, 5, 0, 0"/>
            </StackPanel>


            <ScrollViewer Grid.Row="1" Grid.Column="0" ZoomMode="Disabled"  
                IsTabStop="True" IsVerticalScrollChainingEnabled="True"  
                HorizontalAlignment="Center" VerticalAlignment="Center"  
                HorizontalScrollMode="Enabled" HorizontalScrollBarVisibility="Auto"  
                VerticalScrollMode="Enabled" VerticalScrollBarVisibility="Auto">

                <StackPanel Orientation="Vertical" Spacing="6" Margin="0, 10, 0 ,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Σύνδεση" FontSize="25" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0, 0"/>
                    <FontIcon Glyph="&#xE716;" HorizontalAlignment="Center" FontSize="50" Margin="0,20,0, 20"/>
                    <TextBlock  Text="Email"/>
                    <TextBox x:Name="username_sign_in" Width="300"/>
                    <TextBlock Text="Κωδικός" Margin="0, 5, 0,0"/>
                    <PasswordBox  x:Name="password_sign_in" Width="300"/>
                    <Button HorizontalAlignment="Center" Click="Log_in" Margin="0, 25, 0 ,20" Style="{StaticResource AccentButtonStyle}">
                        
                         
                         <TextBlock Text="Σύνδεση" FontSize="15"/>
                       
                    </Button>
                </StackPanel>

            </ScrollViewer>

            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                <Image Source="Assets/line.png" Width="50" Height="150" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Text="ή" TextAlignment="Center" FontSize="30" FontWeight="SemiBold"/>
                <Image Source="Assets/line.png" Width="50" Height="150" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </StackPanel>

            <ScrollViewer Grid.Row="1" Grid.Column="2" ZoomMode="Disabled"  
                IsTabStop="True" IsVerticalScrollChainingEnabled="True"  
                HorizontalAlignment="Center" VerticalAlignment="Center"  
                HorizontalScrollMode="Enabled" HorizontalScrollBarVisibility="Auto"  
                VerticalScrollMode="Enabled" VerticalScrollBarVisibility="Auto">

                <StackPanel Orientation="Vertical">

                    <TextBlock Text="Εγγραφή" FontSize="25" FontWeight="SemiBold" TextAlignment="Center" Margin="0,0,0, 0" Width="300"/>
                    <FontIcon Glyph="&#xE70F;" HorizontalAlignment="Center" FontSize="40" Margin="0,20,0, 10"/>


                    <StackPanel x:Name="sign_up_1" Visibility="Visible" Orientation="Vertical" HorizontalAlignment="Center" Spacing="3" Margin="0, 10, 15 ,0">

                        <!-- <TextBlock Text="Συμπληρώστε όλα τα πεδία" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0, 15"/> -->
                        <TextBlock Text="Email" Margin="0, 10, 0,0" Width="300"/>
                        <TextBox x:Name="email_obj" PlaceholderText="user@example.com"/>
                        <TextBlock Text="Κωδικός" Margin="0, 10, 0,0" />
                        <PasswordBox x:Name="password_obj" PlaceholderText="Εισάγετε έναν ισχυρό κωδικό"/>
                        <TextBlock Text="Όνομα" Margin="0, 10, 0,0"/>
                        <TextBox x:Name="name_obj" PlaceholderText="π.χ. Γιώργος"/>
                        <TextBlock Text="Επώνυμο" Margin="0, 10, 0,0"/>
                        <TextBox x:Name="surname_obj" PlaceholderText="π.χ. Παπαδόπουλος"/>
                        

                        <Button HorizontalAlignment="Center" Click="Sign_up_semi" Style="{StaticResource AccentButtonStyle}"  Margin="0, 25, 0 ,10">

                            <TextBlock Text="Συνέχεια" FontSize="15" />
                            
                        </Button>

                    </StackPanel>

                    <StackPanel x:Name="sign_up_2" Visibility="Collapsed" Orientation="Vertical" Spacing="15" Margin="0, 10, 15 ,0">

                        <!-- Continue of the login process -->
                        <TextBlock Text="Απαντήστε στις παρακάτω ερωτήσεις..." FontSize="17" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0, 0, 0, 12"/>
                        <RadioButtons x:Name="sign_up_radio_1" Header="Πόσο καλά γνωρίζετε την Αλεξανδρούπολη;" MaxColumns="3">
                            <RadioButton Content="Μέτρια" />
                            <RadioButton Content="Καλά" />
                            <RadioButton Content="Πολύ καλά" />
                        </RadioButtons>
                        <RadioButtons x:Name="sign_up_radio_2" Header="Πού βρίσκεται η Αλεξανδρούπολη;" MaxColumns="3">
                            <RadioButton Content="Νότια Ελλάδα" />
                            <RadioButton Content="Βόρεια Ελλάδα" />
                            <RadioButton Content="Κεντρική Ελλάδα" />
                        </RadioButtons>
                        <RadioButtons x:Name="sign_up_radio_3" Header="Τι είναι η Αλεξανδρούπολη;" MaxColumns="3">
                            <RadioButton Content="Πόλη" />
                            <RadioButton Content="Κωμόπολη" />
                            <RadioButton Content="Χωριό" />
                        </RadioButtons>

                        <Grid Margin="0, 12, 0 , 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>


                            <Button HorizontalAlignment="Left" Click="Sign_up_back" Style="{StaticResource AccentButtonStyle}" >
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE72B;" FontSize="14"/>
                                    <TextBlock Text="Πίσω" FontSize="15" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            

                            <Button Grid.Column="1" HorizontalAlignment="Right" Style="{StaticResource AccentButtonStyle}" Click="Sign_up" >
                                <TextBlock Text="Εγγραφή" FontSize="15"/>
                            </Button>
                            
                        </Grid>


                    </StackPanel>

                    
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- End of Welcome Screen Grid  -->
      
        <!-- Main App Content-->

        <Grid Grid.Row="1" Visibility="Collapsed" x:Name="main_screen">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <Button x:Name="sign_out_button" Visibility="Collapsed" Content="Αποσύνδεση" Margin="0, 0, 17, 7" Height="30" FontSize="12" FontWeight="SemiBold" Click="Sign_out" HorizontalAlignment="Right"/>
                

            <NavigationView x:Name="navigation_element" SelectionChanged="nv_SelectionChanged" Grid.Row="1" IsBackButtonVisible="Collapsed" IsSettingsVisible="False" IsPaneVisible="True" IsPaneToggleButtonVisible="False" >
                <NavigationView.MenuItems>
                    
                    <NavigationViewItem x:Name="home_nav" Icon="Home" Content="Αρχική" Tag="start" IsSelected="True"/>
                    
                    <NavigationViewItem x:Name="chapter_1_nav" Content="Ενότητα 1" Icon="Library" SelectsOnInvoked="False">
                        <NavigationViewItem.MenuItems>
                            <NavigationViewItem Content="Ο Φάρος" Tag="edu_1" >
                                <NavigationViewItem.Icon>
                                    <FontIcon Glyph="&#xE82D;"/>
                                </NavigationViewItem.Icon>
                            </NavigationViewItem>
                            <NavigationViewItem Content="Quiz 1" Tag="quiz_1" >
                                <NavigationViewItem.Icon>
                                    <FontIcon Glyph="&#xE8FD;"/>
                                </NavigationViewItem.Icon>
                            </NavigationViewItem>
                        </NavigationViewItem.MenuItems>
                    </NavigationViewItem>

                    <NavigationViewItem x:Name="test_1_nav" Content="Τεστ 1ης Ενότητας" Tag="test_1">
                        <NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xEE56;"/>
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>

                    <NavigationViewItem x:Name="chapter_2_nav" Content="Ενότητα 2" Icon="Library" SelectsOnInvoked="False">
                        <NavigationViewItem.MenuItems>
                            <NavigationViewItem Content="Το Δέλτα του Έβρου" Tag="edu_2" >
                                <NavigationViewItem.Icon>
                                    <FontIcon Glyph="&#xE82D;"/>
                                </NavigationViewItem.Icon>
                            </NavigationViewItem>
                            <NavigationViewItem Content="Quiz 2" Tag="quiz_2" >
                                <NavigationViewItem.Icon>
                                    <FontIcon Glyph="&#xE8FD;"/>
                                </NavigationViewItem.Icon>
                            </NavigationViewItem>
                        </NavigationViewItem.MenuItems>
                    </NavigationViewItem>

                    <NavigationViewItem x:Name="test_2_nav" Content="Τεστ 2ης Ενότητας" Tag="test_2">
                        <NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xEE56;"/>
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>

                    <NavigationViewItem x:Name="chapter_3_nav" Content="Ενότητα 3" Icon="Library" SelectsOnInvoked="False" >
                        <NavigationViewItem.MenuItems>
                            <NavigationViewItem Content="Παραδοσιακή Αρχιτεκτονική" Tag="edu_3" >
                                <NavigationViewItem.Icon>
                                    <FontIcon Glyph="&#xE82D;"/>
                                </NavigationViewItem.Icon>
                            </NavigationViewItem>
                            <NavigationViewItem Content="Quiz 3" Tag="quiz_3" >
                                <NavigationViewItem.Icon>
                                    <FontIcon Glyph="&#xE8FD;"/>
                                </NavigationViewItem.Icon>
                            </NavigationViewItem>
                        </NavigationViewItem.MenuItems>
                    </NavigationViewItem>

                    <NavigationViewItem x:Name="test_3_nav" Content="Τεστ 3ης Ενότητας" Tag="test_3">
                        <NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xEE56;"/>
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>


                </NavigationView.MenuItems>



                <NavigationView.FooterMenuItems>
                    <NavigationViewItem Content="Σχετικά με την εφαρμογή" Tag="about_the_app">
                        <NavigationViewItem.Icon>
                            <FontIcon Glyph="&#xF167;"/>
                        </NavigationViewItem.Icon>
                    </NavigationViewItem>
                </NavigationView.FooterMenuItems>

                <Frame x:Name="contentFrame">
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center" Spacing="20">
                        <Image Source="/Assets/light_house.png" HorizontalAlignment="Center" VerticalAlignment="Center" Height="150" Width="150"/>
                        <TextBlock Text="...the UI is a work in progress !" FontSize="25" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Frame>
            </NavigationView>

            <TeachingTip x:Name="TeachingTip" x:FieldModifier="internal"
                   Title="Αποτυχία σύνδεσης"
                   Subtitle="Το Email ή/και το Password είναι λανθασμένα. Προσπάθησε ξανά !"
                   HorizontalContentAlignment="Center"
                   PreferredPlacement="Auto"
                   PlacementMargin="20"
                   IsLightDismissEnabled="True"
                   CloseButtonContent="ΟΚ"
                   Grid.Row="1"
                   IsEnabled="True"
                   />
        </Grid>

        <!-- End of Main App Content-->

    </Grid>  
</Window>
