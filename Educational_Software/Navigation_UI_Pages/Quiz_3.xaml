<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Educational_Software.Navigation_UI_Pages.Quiz_3"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Educational_Software.Navigation_UI_Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Spacing="8">
            <StackPanel Orientation="Horizontal" Spacing="15" HorizontalAlignment="Center" Margin="0, 15,0,0">
                <FontIcon Glyph="&#xE8FD;" FontSize="42"/>
                <TextBlock Text="Quiz 3" FontSize="25" FontWeight="SemiBold" VerticalAlignment="Center"/>
            </StackPanel>
            <TextBlock Text="Ερωτήσεις για την Ενότητα 3 - Παραδοσιακή Αρχιτεκτονική" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>



        <ScrollViewer Grid.Row="1" ZoomMode="Disabled"
    IsTabStop="True" IsVerticalScrollChainingEnabled="True"  
    HorizontalAlignment="Stretch" VerticalAlignment="Center"  
    HorizontalScrollMode="Disabled" HorizontalScrollBarVisibility="Disabled"  
    VerticalScrollMode="Enabled" VerticalScrollBarVisibility="Auto"
    Margin="40, 8, 40, 8">

            <StackPanel Spacing="50">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="1." FontSize="50" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Width="50" Margin="0, 0, 20, 0" />
                    <Border Grid.Column="1" CornerRadius="12" BorderThickness="1" BorderBrush="Aquamarine" Padding="15" Background="AliceBlue" >
                        <StackPanel>
                            <RadioButtons x:Name="question_1_radio" Header="Ποιο νεοκλασικό κτίριο της Αλεξανδρούπολης χρηματοδοτήθηκε από τον Γεώργιο Ζαρίφη;" MaxColumns="3" >
                                <RadioButton x:Name="question_1_radio_answer1" Content="Η Ζαρίφειος Παιδαγωγική Ακαδημία" />
                                <RadioButton x:Name="question_1_radio_answer2" Content="Το κτίριο του Σιδηροδρομικού Σταθμού" />
                                <RadioButton x:Name="question_1_radio_answer3" Content="Το Καπνομάγαζο" />
                            </RadioButtons>
                            <TextBlock x:Name="question_1_empty" Text="Θέση Ερώτησης 1" FontSize="20" FontWeight="SemiLight" Foreground="DimGray" HorizontalAlignment="Center" Visibility="Collapsed"/>
                        </StackPanel>
                    </Border>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="2." FontSize="50" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Width="50" Margin="0, 0, 20, 0" />
                    <Border Grid.Column="1" CornerRadius="12" BorderThickness="1" BorderBrush="Aquamarine" Padding="15" Background="AliceBlue">
                        <StackPanel>
                            <RadioButtons x:Name="question_2_radio_1" Header="Ποια χρήση είχε αρχικά το κτίριο που σήμερα ονομάζεται «Καπνομάγαζο»" MaxColumns="3" Visibility="Collapsed">
                                <RadioButton x:Name="question_2_radio1_answer1" Content="Βιοτεχνία επεξεργασίας καπνού" />
                                <RadioButton x:Name="question_2_radio1_answer2" Content="Σχολείο Αρρένων των Καθολικών" />
                                <RadioButton x:Name="question_2_radio1_answer3" Content="Οθωμανικό τελωνείο" />
                            </RadioButtons>
                            <RadioButtons x:Name="question_2_radio_2" Header="Ποιο ήταν το αρχικό όνομα της Αλεξανδρούπολης;" MaxColumns="3" Visibility="Collapsed" >
                                <RadioButton x:Name="question_2_radio2_answer1" Content="Δεδέαγατς" />
                                <RadioButton x:Name="question_2_radio2_answer2" Content="Ανδριανούπολη" />
                                <RadioButton x:Name="question_2_radio2_answer3" Content="Φιλιππούπολη" />
                            </RadioButtons>
                            <TextBlock x:Name="question_2_empty" Text="Θέση Ερώτησης 2" FontSize="20" FontWeight="SemiLight" Foreground="DimGray" HorizontalAlignment="Center" Visibility="Visible"/>
                        </StackPanel>
                    </Border>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="3." FontSize="50" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" Width="50" Margin="0, 0, 20, 0" />
                    <Border Grid.Column="1" CornerRadius="12" BorderThickness="1" BorderBrush="Aquamarine" Padding="15" Background="AliceBlue">
                        <StackPanel>
                            <RadioButtons x:Name="question_3_radio_1" Header="Ποια από τις παρακάτω χρονικές αλληλουχίες γεγονότων είναι σωστή για το Καπνομάγαζο;" MaxColumns="3" Visibility="Collapsed">
                                <RadioButton x:Name="question_3_radio1_answer1" Content="Πυρκαγιά – Καθολικό Σχολείο – Καπναποθήκη – Προσφυγική στέγαση" />
                                <RadioButton x:Name="question_3_radio1_answer2" Content="Καθολικό Σχολείο – Καπναποθήκη – Πυρκαγιά – Προσφυγική στέγαση" />
                                <RadioButton x:Name="question_3_radio1_answer3" Content="Καθολικό Σχολείο – Πυρκαγιά – Προσφυγική στέγαση – Καπναποθήκη (Σ)" />
                            </RadioButtons>
                            <RadioButtons x:Name="question_3_radio_2" Header="Ποια από τις παρακάτω πληροφορίες ΔΕΝ ισχύει για τον Σιδηροδρομικό Σταθμό της Αλεξανδρούπολης;" MaxColumns="3" Visibility="Collapsed">
                                <RadioButton x:Name="question_3_radio2_answer1" Content="Είναι διώροφος με κεραμοσκεπή" />
                                <RadioButton x:Name="question_3_radio2_answer2" Content="Εξυπηρετούσε τη διακίνηση επιβατών και εμπορευμάτων" />
                                <RadioButton x:Name="question_3_radio2_answer3" Content="Χτίστηκε τον 21ο αιώνα" />
                            </RadioButtons>
                            <RadioButtons x:Name="question_3_radio_3" Header="Πότε περίπου «γεννήθηκε» η πόλη της Αλεξανδρούπολης;" MaxColumns="3" Visibility="Collapsed">
                                <RadioButton x:Name="question_3_radio3_answer1" Content="Στα μέσα του 20ού αιώνα" />
                                <RadioButton x:Name="question_3_radio3_answer2" Content="Στα τέλη του 19ου αιώνα" />
                                <RadioButton x:Name="question_3_radio3_answer3" Content="Στις αρχές του 18ου αιώνα" />
                            </RadioButtons>
                            <TextBlock x:Name="question_3_empty" Text="Θέση Ερώτησης 3" FontSize="20" FontWeight="SemiLight" Foreground="DimGray" HorizontalAlignment="Center" Visibility="Visible"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>


        </ScrollViewer>

        <InfoBar Grid.Row="2" x:Name="info_message" IsOpen="True" Severity="Warning" Title="Αναμονή ολοκλήρωσης" IsClosable="False" Margin="10, 0, 10, 0"
        Message="Απάντησε όλες τις ερωτήσεις του Quiz ώστε να ελεγθεί η πρόοδός σου" />

        <Grid Grid.Row="3" VerticalAlignment="Center" Margin="0,10 , 10, 10" Padding="0, 10, 0, 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Ερώτηση:" FontSize="20" FontWeight="SemiBold"/>
                    <TextBlock x:Name="question_number" Text="1" FontSize="20" FontWeight="SemiBold" Margin="10, 0, 0, 0" />
                    <TextBlock Text="/3" FontSize="20" FontWeight="SemiBold"/>
                </StackPanel>
                <TextBlock Text="Επέλεξε απάντηση και πάτησε το κουμπί για να συνεχίσεις" HorizontalAlignment="Center"/>
            </StackPanel>

            <Button x:Name="NextButton" Grid.Column="1" VerticalAlignment="Bottom" Content="Επόμενη" Style="{StaticResource AccentButtonStyle}" Width="170" Click="Next_step" />
        </Grid>

    </Grid>

</Page>
