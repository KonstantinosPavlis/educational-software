<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Educational_Software.Navigation_UI_Pages.Test_2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Educational_Software.Navigation_UI_Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Spacing="8">
            <StackPanel Orientation="Horizontal" Spacing="15" HorizontalAlignment="Center" Margin="0, 15,0,0">
                <FontIcon Glyph="&#xEE56;" FontSize="42"/>
                <TextBlock Text="Τεστ 2ης Ενότητας" FontSize="25" FontWeight="SemiBold" VerticalAlignment="Center"/>
            </StackPanel>
            <TextBlock Text="Ερωτήσεις για την Ενότητα 2 και όλες τις προηγούμενες ενότητες" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" ZoomMode="Disabled"
        IsTabStop="True" IsVerticalScrollChainingEnabled="True"  
        HorizontalAlignment="Stretch" VerticalAlignment="Center"  
        HorizontalScrollMode="Disabled" HorizontalScrollBarVisibility="Disabled"  
        VerticalScrollMode="Enabled" VerticalScrollBarVisibility="Auto"
        Margin="40, 8, 40, 8" Visibility="Visible">

            <StackPanel x:Name="test_1_questions" Spacing="50" Margin="0, 0, 17, 0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>


                    <FontIcon Glyph="&#xEADF;" FontSize="60" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 0, 25 ,0" />
                    <Border Grid.Column="1" CornerRadius="12" BorderThickness="1" BorderBrush="YellowGreen" Padding="15" Background="LightGoldenrodYellow" MinHeight="140">

                        <StackPanel Spacing="5" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="Ερώτηση Πολλαπλής Επιλογής" FontWeight="SemiBold" FontSize="16" Margin="0, 0, 0, 8" HorizontalAlignment="Center"/>
                            <StackPanel x:Name="question_1_1" Visibility="Visible">
                                <TextBlock Text="Πόσα στρέμματα της περιοχής του Δέλτα εντάσσονται στη Σύμβαση Ραμσάρ;" HorizontalAlignment="Center"/>
                                <RadioButtons x:Name="question_1_1_radio" MaxColumns="4" HorizontalAlignment="Center" >
                                    <RadioButton x:Name="question_1_1_radio_answer1" Content="50.000" />
                                    <RadioButton x:Name="question_1_1_radio_answer2" Content="95.000" />
                                    <RadioButton x:Name="question_1_1_radio_answer3" Content="120.000" />
                                    <RadioButton x:Name="question_1_1_radio_answer4" Content="200.000" />
                                </RadioButtons>
                            </StackPanel>
                            <StackPanel x:Name="question_1_2" Visibility="Collapsed">
                                <TextBlock Text="Ποιο από τα παρακάτω φυτά εμφανίζεται στις αμμονησίδες του Δέλτα;" HorizontalAlignment="Center"/>
                                <RadioButtons x:Name="question_1_2_radio" MaxColumns="4" HorizontalAlignment="Center" >
                                    <RadioButton x:Name="question_1_2_radio_answer1" Content="Πλάτανος" />
                                    <RadioButton x:Name="question_1_2_radio_answer2" Content="Νούφαρο" />
                                    <RadioButton x:Name="question_1_2_radio_answer3" Content="Κρίνο" />
                                    <RadioButton x:Name="question_1_2_radio_answer4" Content="Ιτιά" />
                                </RadioButtons>
                            </StackPanel>
                        </StackPanel>

                    </Border>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>


                    <FontIcon Glyph="&#xEADF;" FontSize="60" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 0, 25 ,0" />
                    <Border Grid.Column="1" CornerRadius="12" BorderThickness="1" BorderBrush="YellowGreen" Padding="15" Background="LightGoldenrodYellow" MinHeight="140">

                        <StackPanel Spacing="5" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="Ερώτηση Σωστού/Λάθους" FontWeight="SemiBold" FontSize="16" Margin="0, 0, 0, 8" HorizontalAlignment="Center"/>
                            <StackPanel>
                                <TextBlock x:Name="question_2_1_text"  Text="Το 1946 έγιναν επισκευές στον φάρο." HorizontalAlignment="Center" Visibility="Visible"/>
                                <TextBlock x:Name="question_2_2_text"  Text="Ο φάρος λειτουργεί σήμερα με πετρέλαιο." HorizontalAlignment="Center" Visibility="Collapsed"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <CheckBox x:Name="PositiveAnswer_checkbox" Content="Ναι" Checked="PositiveAnswer_checkbox_checked" Width="Auto" />
                                <CheckBox x:Name="NegativeAnswer_checkbox" Content="Όχι" Checked="NegativeAnswer_checkbox_checked" />
                            </StackPanel>
                        </StackPanel>

                    </Border>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>


                    <FontIcon Glyph="&#xEADF;" FontSize="60" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 0, 25 ,0" />
                    <Border Grid.Column="1" CornerRadius="12" BorderThickness="1" BorderBrush="YellowGreen" Padding="15" Background="LightGoldenrodYellow" MinHeight="140">

                        <StackPanel Spacing="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="Ερώτηση Συμπλήρωσης Κενού" FontWeight="SemiBold" FontSize="16" Margin="0, 0, 0, 8" HorizontalAlignment="Center"/>

                            <ScrollViewer ZoomMode="Disabled"
                            IsTabStop="True" IsVerticalScrollChainingEnabled="True"  
                            HorizontalAlignment="Center" VerticalAlignment="Center"  
                            HorizontalScrollMode="Enabled" HorizontalScrollBarVisibility="Auto"  
                            VerticalScrollMode="Disabled" VerticalScrollBarVisibility="Disabled" >
                                <StackPanel>
                                    <StackPanel x:Name="question_3_1" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="7" VerticalAlignment="Center" Margin="0 , 7, 0, 17" Visibility="Visible">
                                        <TextBlock x:Name="question_3_1_text" Text="«Η αρμυρήθρα το φθινόπωρο γίνεται" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16"/>
                                        <ComboBox x:Name="question_3_1_combobox" PlaceholderText="Επιλογή" Width="130" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                                            <x:String>μπλε</x:String>
                                            <x:String>κόκκινη</x:String>
                                            <x:String>πράσινη</x:String>
                                        </ComboBox>
                                        <TextBlock Text=".»" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" />
                                    </StackPanel>
                                    <StackPanel x:Name="question_3_2" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="7" VerticalAlignment="Center" Margin="0 , 7, 0, 17" Visibility="Collapsed">
                                        <TextBlock x:Name="question_3_2_text" Text="«Το Δέλτα του Έβρου σχηματίζεται στις" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16"/>
                                        <ComboBox x:Name="question_3_2_combobox" PlaceholderText="Επιλογή" Width="130" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                                            <x:String>εκβολές</x:String>
                                            <x:String>κοιλάδες</x:String>
                                            <x:String>πηγές</x:String>
                                        </ComboBox>
                                        <TextBlock Text="του ποταμού Έβρου.»" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" />
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>

                        </StackPanel>

                    </Border>
                </Grid>
            </StackPanel>


        </ScrollViewer>

        <!-- For specific purposes only - Don't activate -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10" Visibility="Collapsed">
            <ProgressRing IsActive="True" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <TextBlock Text="Φόρτωση ερωτήσεων..." FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>

        <InfoBar Grid.Row="2" x:Name="info_message" IsOpen="True" Severity="Informational" Title="Αναμονή ολοκλήρωσης" IsClosable="False" Margin="10, 0, 10, 0"
        Message="Απάντησε τις ερωτήσεις του τεστ σωστά ώστε να μπορέσεις να συνεχίσεις σε επόμενες ενότητες" />

        <Grid Grid.Row="3" VerticalAlignment="Center" Margin="0,10 , 10, 10" Padding="0, 10, 0, 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>


            <TextBlock Text="Πάτησε το κουμπί ώστε να ελεγχθεί η ορθότητα των απαντήσεων" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <Button x:Name="completion_button" Grid.Column="1" VerticalAlignment="Bottom" Content="Ολοκλήρωση" Style="{StaticResource AccentButtonStyle}" Width="180"  Click="Complete_button_Click"/>
        </Grid>




    </Grid>
</Page>
